[alias]
  sl = log --oneline --decorate -20
  sla = log --oneline --decorate --graph --all -20
  slp = log --oneline --decorate
  slap = log --oneline --decorate --graph --all
[core]
	editor = nvim
	excludesfile = ~/.gitignore
[color]
  ui = auto
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[push]
	default = matching
[pull]
	rebase = true
[merge]
	ff = only
[include]
  path = .gitconfig.local
[diff]
	compactionHeuristic = true
  tool = icdiff
[difftool]
  prompt = false
[difftool "icdiff"]
  cmd = /usr/local/bin/icdiff --line-numbers $LOCAL $REMOTE
[commit]
	gpgsign = true
[gpg]
	program = gpg
[init]
	defaultBranch = main
